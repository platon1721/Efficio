@model IEnumerable<Efficio.Core.Domain.Entities.Common.User>

@{
    ViewData["Title"] = Localizer["UserManagement"];
}

<h1>@Localizer["UserManagement"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">@Localizer["CreateNewUser"]</a>
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>@Localizer["FullName"]</th>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["PhoneNumber"]</th>
            <th>@Localizer["CreatedAt"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @(item.FirstName + " " + item.SurName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @($"+{item.CountryCode} {item.Number}")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">@Localizer["Edit"]</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">@Localizer["Details"]</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">@Localizer["Delete"]</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>