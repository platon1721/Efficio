@model Efficio.Core.Domain.Entities.Common.User

@{
    ViewData["Title"] = Localizer["CreateUser"];
}

<h1>@Localizer["CreateUser"]</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                @Localizer["UserInformation"]
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">@Localizer["FirstName"]</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SurName" class="form-label">@Localizer["SurName"]</label>
                        <input asp-for="SurName" class="form-control" />
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-4">
                            <label asp-for="CountryCode" class="form-label">@Localizer["CountryCode"]</label>
                            <input asp-for="CountryCode" class="form-control" placeholder="372" />
                            <span asp-validation-for="CountryCode" class="text-danger"></span>
                        </div>
                        <div class="col-8">
                            <label asp-for="Number" class="form-label">@Localizer["Number"]</label>
                            <input asp-for="Number" class="form-control" placeholder="5XXXXXXX" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
                        <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}