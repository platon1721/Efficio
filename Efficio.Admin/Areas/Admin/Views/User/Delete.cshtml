@model Efficio.Core.Domain.Entities.Common.User

@{
    ViewData["Title"] = Localizer["DeleteUser"];
}

<h1>@Localizer["DeleteUser"]</h1>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle-fill"></i> @Localizer["DeleteWarning"]</h4>
    <p>@Localizer["DeleteUserConfirmation"]</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                @Localizer["UserToDelete"]
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Localizer["FullName"]</dt>
                    <dd class="col-sm-8">@(Model.FirstName + " " + Model.SurName)</dd>
                    
                    <dt class="col-sm-4">@Localizer["Email"]</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    
                    <dt class="col-sm-4">@Localizer["PhoneNumber"]</dt>
                    <dd class="col-sm-8">+@(Model.CountryCode) @Model.Number</dd>
                </dl>
                
                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
                        <button type="submit" class="btn btn-danger">@Localizer["ConfirmDelete"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>