@model Efficio.Core.Domain.Entities.Common.User

@{
    ViewData["Title"] = Localizer["UserDetails"];
}

<h1>@Localizer["UserDetails"]</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                @Localizer["UserInformation"]
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Localizer["FullName"]</dt>
                    <dd class="col-sm-8">@(Model.FirstName + " " + Model.SurName)</dd>
                    
                    <dt class="col-sm-4">@Localizer["Email"]</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    
                    <dt class="col-sm-4">@Localizer["PhoneNumber"]</dt>
                    <dd class="col-sm-8">+@(Model.CountryCode) @Model.Number</dd>
                    
                    <dt class="col-sm-4">@Localizer["CreatedAt"]</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
                    
                    <dt class="col-sm-4">@Localizer["LastModified"]</dt>
                    <dd class="col-sm-8">@Model.ModifiedAt.ToString("g")</dd>
                    
                    @if (Model.IsDeleted)
                    {
                        <dt class="col-sm-4">@Localizer["DeletedAt"]</dt>
                        <dd class="col-sm-8">@Model.DeletedAt?.ToString("g")</dd>
                    }
                </dl>
                
                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@Localizer["Edit"]</a>
                </div>
            </div>
        </div>
    </div>
</div>